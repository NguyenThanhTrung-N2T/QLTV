<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.main.qltv.controller.Dang_Nhap_Controller"
            prefWidth="600.0" prefHeight="400.0"
            style="-fx-background-color: linear-gradient(to bottom right, #e0f7fa, #b2ebf2);">

    <VBox spacing="20" alignment="CENTER" layoutX="100.0" layoutY="50.0" prefWidth="400" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="100">
        <!-- Tiêu đề -->
        <Label text="ĐĂNG NHẬP" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <!-- Tên đăng nhập -->
        <VBox spacing="5">
            <Label text="Tên đăng nhập:"/>
            <TextField fx:id="txtTenDangNhap" promptText="Nhập tên đăng nhập"/>
        </VBox>

        <!-- Mật khẩu -->
        <VBox spacing="5">
            <Label text="Mật khẩu:"/>
            <PasswordField fx:id="txtMatKhau" promptText="Nhập mật khẩu"/>
        </VBox>

        <!-- Nút đăng nhập -->
        <Button fx:id="btnDangNhap" onAction="#DanhNhap" text="Đăng nhập" prefWidth="120"/>

        <!-- Thông báo lỗi -->
        <Label fx:id="lblThongBao" textFill="red" visible="false"/>
    </VBox>

</AnchorPane>
