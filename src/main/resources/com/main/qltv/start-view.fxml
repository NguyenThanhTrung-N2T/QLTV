<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.qltv.QLTVController">
    <ImageView fitHeight="500" fitWidth="800" preserveRatio="false">
        <image>
            <Image url="@library.jpg" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" layoutX="220.0" layoutY="111.0" prefHeight="277.0" prefWidth="360.0" spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-background-radius: 10; -fx-padding: 20;">
        <ImageView fitHeight="100" fitWidth="100">
            <image>
                <Image url="@book.png" />
            </image>
        </ImageView>

        <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Library Management" />
        <Label style="-fx-font-size: 16px;" text="Welcome to the Digital Library" />

        <HBox prefHeight="26.0" prefWidth="262.0" spacing="10">
         <children>
               <Button fx:id="DangNhap" style="-fx-background-radius: 10" onAction="#DangNhap" prefWidth="100" text="Đăng Nhập" />
               <Button fx:id="DangKy" style="-fx-background-radius: 10" onAction="#DangKy" prefWidth="100" text="Đăng Ký" />
               <Button fx:id="Exit" style="-fx-background-radius: 10" onAction="#Exit" prefWidth="100" text="Thoát" />
         </children></HBox>
    </VBox>
</AnchorPane>
