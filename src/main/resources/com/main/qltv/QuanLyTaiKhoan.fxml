<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.main.qltv.controller.QuanLyTaiKhoanController"
            prefHeight="500.0" prefWidth="800.0"
            style="-fx-background-color: #ECF0F1;">

    <ScrollPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                fitToWidth="true" fitToHeight="true" style="-fx-padding: 10;">
        <BorderPane style="-fx-padding: 20;">
            <!-- Form nhập liệu ở trên cùng -->
            <top>
                <VBox spacing="15">
                    <GridPane hgap="10" vgap="10">
                        <Label text="Mã TK:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtMaTaiKhoan" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Mã tài khoản"/>

                        <Label text="Tên Đăng Nhập:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtTenDangNhap" GridPane.columnIndex="3" GridPane.rowIndex="0" promptText="Tên đăng nhập"/>

                        <Label text="Mật Khẩu:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <PasswordField fx:id="txtMatKhau" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Mật khẩu"/>

                        <Label text="Loại Người Dùng:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="cbLoaiNguoiDung" GridPane.columnIndex="3" GridPane.rowIndex="1" promptText="Chọn loại">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="sinhvien"/>
                                    <String fx:value="quanly"/>
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <Label text="Mã Sinh Viên:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtMaSinhVien" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Mã sinh viên (nếu có)"/>
                    </GridPane>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button fx:id="btnThem" text="Thêm" style="-fx-background-color: #2ECC71; -fx-text-fill: white;"/>
                        <Button fx:id="btnSua" text="Sửa" style="-fx-background-color: #F1C40F; -fx-text-fill: white;"/>
                        <Button fx:id="btnXoa" text="Xóa" style="-fx-background-color: #E74C3C; -fx-text-fill: white;"/>
                        <Button fx:id="btnLamMoi" text="Làm Mới" style="-fx-background-color: #95A5A6; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>
            </top>

            <!-- Bảng danh sách ở giữa -->
            <center>
                <TableView fx:id="tableTaiKhoan" prefHeight="300" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn fx:id="colMaTaiKhoan" text="Mã TK" prefWidth="100"/>
                        <TableColumn fx:id="colTenDangNhap" text="Tên Đăng Nhập" prefWidth="180"/>
                        <TableColumn fx:id="colMatKhau" text="Mật Khẩu" prefWidth="180"/>
                        <TableColumn fx:id="colLoaiNguoiDung" text="Loại Người Dùng" prefWidth="140"/>
                        <TableColumn fx:id="colMaSinhVien" text="Mã SV" prefWidth="120"/>
                    </columns>
                </TableView>
            </center>
        </BorderPane>
    </ScrollPane>
</AnchorPane>
