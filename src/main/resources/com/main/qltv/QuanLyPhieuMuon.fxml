<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane style="-fx-background-color: #f4f4f4;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="controller.QuanLyPhieuMuonController">

    <!-- Title -->
    <top>
        <Label text="QUẢN LÝ PHIẾU MƯỢN SÁCH"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
               BorderPane.alignment="CENTER"
               padding="20"/>
    </top>

    <!-- Form nhập -->
    <center>
        <VBox spacing="10" padding="20">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="30"/>
                </columnConstraints>

                <!-- Row 1 -->
                <Label text="Mã phiếu:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="tfMaPhieu" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Mã độc giả:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="tfMaDG" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <!-- Row 2 -->
                <Label text="Tên độc giả:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="tfTenDG" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Ngày mượn:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <DatePicker fx:id="dpNgayMuon" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <!-- Row 3 -->
                <Label text="Ngày trả:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpNgayTra" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Trạng thái:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <ComboBox fx:id="cbTrangThai" prefWidth="150"
                          GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <!-- Row 4 -->
                <Label text="Mã sách:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="tfMaSach" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Tên sách:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <TextField fx:id="tfTenSach" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Thêm" fx:id="btnThem" onAction="#handleThem" prefWidth="100"/>
                <Button text="Sửa" fx:id="btnSua" onAction="#handleSua" prefWidth="100"/>
                <Button text="Xoá" fx:id="btnXoa" onAction="#handleXoa" prefWidth="100"/>
                <Button text="Làm mới" fx:id="btnLammoi" onAction="#handleLammoi" prefWidth="100"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bảng dữ liệu -->
    <bottom>
        <TableView fx:id="tablePhieuMuon" prefHeight="300">
            <columns>
                <TableColumn fx:id="colMaPhieu" text="Mã Phiếu" prefWidth="100"/>
                <TableColumn fx:id="colMaDG" text="Mã Độc Giả" prefWidth="100"/>
                <TableColumn fx:id="colTenDG" text="Tên Độc Giả" prefWidth="120"/>
                <TableColumn fx:id="colNgayMuon" text="Ngày Mượn" prefWidth="100"/>
                <TableColumn fx:id="colNgayTra" text="Ngày Trả" prefWidth="100"/>
                <TableColumn fx:id="colMaSach" text="Mã Sách" prefWidth="100"/>
                <TableColumn fx:id="colTenSach" text="Tên Sách" prefWidth="120"/>
                <TableColumn fx:id="colTrangThai" text="Trạng Thái" prefWidth="100"/>
            </columns>
        </TableView>
    </bottom>
</BorderPane>
