<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2); -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.qltv.controller.QuanLyPhieuMuonController">
    <VBox alignment="TOP_CENTER" spacing="15">

        <!-- Tiêu đề -->
        <Label style="-fx-font-size: 22px; -fx-font-family: 'Segoe UI'; -fx-text-fill: #2c3e50;" text="📖 QUẢN LÝ MƯỢN TRẢ SÁCH" />

        <!-- Nhập liệu -->
        <GridPane alignment="CENTER" hgap="10" style="-fx-background-color: #ffffff; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="120" />
                <ColumnConstraints minWidth="250" />
            </columnConstraints>

            <Label text="👤 Người Mượn:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtNguoiMuon" prefHeight="30" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="🆔 MSSV:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtMSSV" prefHeight="30" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="📘 Tên Sách:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="txtTenSach" prefHeight="30" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Add after Tên Sách row, before Ngày Mượn -->
            <Label text="🔢 Số Lượng:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Spinner fx:id="spnSoLuong" prefHeight="30" GridPane.columnIndex="1" GridPane.rowIndex="3" min="1" max="100" initialValue="1" />

            <!-- Update the row indices for Ngày Mượn and Ngày Trả accordingly -->
            <Label text="📅 Ngày Mượn:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <DatePicker fx:id="dateMuon" prefHeight="30" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="📅 Ngày Trả:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <DatePicker fx:id="dateTra" prefHeight="30" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <!-- Update the <rowConstraints> to have 6 rows -->
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <!-- Các nút chức năng -->
        <HBox alignment="CENTER" spacing="12">
            <Button fx:id="btnMuon" prefWidth="110" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="📚 Mượn Sách" />
            <Button fx:id="btnTra" prefWidth="110" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="✅ Trả Sách" />
            <Button fx:id="btnCapNhat" prefWidth="110" style="-fx-background-color: #f1c40f; -fx-text-fill: white;" text="🔄 Cập Nhật" />
            <Button fx:id="btnLamMoi" prefWidth="110" style="-fx-background-color: #e67e22; -fx-text-fill: white;" text="🔃 Làm Mới" />
        </HBox>

        <!-- Ô tìm kiếm -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label style="-fx-font-size: 13px;" text="🔍 Tìm kiếm:" />
            <TextField fx:id="txtTimKiem" prefWidth="250" promptText="Nhập từ khóa..." />
        </HBox>

        <!-- Bảng dữ liệu phiếu mượn -->
        <TableView fx:id="muonTraTable" prefHeight="280" prefWidth="750" style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 4);">
            <columns>
                <TableColumn fx:id="colMaPhieu" prefWidth="88.00000381469727" text="Mã Phiếu" />
                <TableColumn fx:id="colMSSV" prefWidth="87.0" text="MSSV" />
                <TableColumn fx:id="colTenNguoiMuon" prefWidth="115.40000915527344" text="Người Mượn" />
                <TableColumn fx:id="colTenSach" prefWidth="136.4000244140625" text="Tên Sách" />
                <TableColumn fx:id="colNgayMuon" prefWidth="99.4000244140625" text="Ngày Mượn" />
                <TableColumn fx:id="colNgayTra" prefWidth="100.20001220703125" text="Ngày Trả" />
                <TableColumn fx:id="colSoLuong" prefWidth="80" text="Số Lượng" />
                <TableColumn fx:id="colTinhTrang" prefWidth="115.0" text="Tình Trạng" />
            </columns>
        </TableView>

    </VBox>
</StackPane>
