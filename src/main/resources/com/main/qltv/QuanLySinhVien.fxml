<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.main.qltv.controller.QuanLySinhVienController"
            style="-fx-background-color: #ECF0F1;">

    <BorderPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                style="-fx-padding: 20;">

        <top>
            <VBox spacing="10">
                <GridPane hgap="10" vgap="10">
                    <Label text="Mã SV:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtMaSinhVien" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Tên SV:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtTenSinhVien" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Giới Tính:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="cbGioiTinh" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Ngày Sinh:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <DatePicker fx:id="dpNgaySinh" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="Địa Chỉ:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtDiaChi" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtEmail" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <Label text="SĐT:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="txtSoDienThoai" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="btnThem" text="Thêm" style="-fx-background-color: #2ECC71; -fx-text-fill: white;"/>
                    <Button fx:id="btnSua" text="Sửa" style="-fx-background-color: #F1C40F; -fx-text-fill: white;"/>
                    <Button fx:id="btnXoa" text="Xóa" style="-fx-background-color: #E74C3C; -fx-text-fill: white;"/>
                    <Button fx:id="btnLamMoi" text="Làm Mới" style="-fx-background-color: #95A5A6; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </top>

        <center>
            <TableView fx:id="tableSinhVien" style="-fx-background-color: white;">
                <columns>
                    <TableColumn fx:id="colMaSinhVien" text="Mã SV" prefWidth="100"/>
                    <TableColumn fx:id="colTenSinhVien" text="Tên SV" prefWidth="150"/>
                    <TableColumn fx:id="colGioiTinh" text="Giới Tính" prefWidth="100"/>
                    <TableColumn fx:id="colNgaySinh" text="Ngày Sinh" prefWidth="120"/>
                    <TableColumn fx:id="colDiaChi" text="Địa Chỉ" prefWidth="200"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="150"/>
                    <TableColumn fx:id="colSoDienThoai" text="SĐT" prefWidth="120"/>
                </columns>
            </TableView>
        </center>

    </BorderPane>
</AnchorPane>
